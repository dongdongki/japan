<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SetupFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            style="?attr/textAppearanceTitleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. 문자 체계" />

        <RadioGroup
            android:id="@+id/radio_group_kana_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/radio_hiragana">

            <RadioButton
                android:id="@+id/radio_hiragana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="히라가나" />

            <RadioButton
                android:id="@+id/radio_katakana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가타카나" />

            <RadioButton
                android:id="@+id/radio_both"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="동시 (히라가나/가타카나)" />

            <RadioButton
                android:id="@+id/radio_mixed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="랜덤 (히라가나 + 가타카나)" />
        </RadioGroup>

        <TextView
            style="?attr/textAppearanceTitleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="2. 학습 범위" />

        <RadioGroup
            android:id="@+id/radio_group_range_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/radio_range_all">

            <RadioButton
                android:id="@+id/radio_range_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체 학습" />

            <RadioButton
                android:id="@+id/radio_range_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="행별 선택" />
        </RadioGroup>

        <LinearLayout
            android:id="@+id/layout_row_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_rows"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2"
                tools:listitem="@layout/item_row_selection" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_view_kana_list"
            style="@style/WhiteOutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="가나 목록 보기" />

        <Button
            android:id="@+id/btn_writing_quiz"
            style="@style/WhiteOutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="쓰기 퀴즈" />

        <Button
            android:id="@+id/btn_selected_kana"
            style="@style/WhiteOutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="선택 가나" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_back"
                style="@style/WhiteOutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="뒤로" />

            <View
                android:layout_width="16dp"
                android:layout_height="0dp"/>

            <Button
                android:id="@+id/btn_start_quiz"
                style="@style/WhiteOutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="퀴즈 시작" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>