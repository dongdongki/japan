<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".ui.HomeFragment">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일본어 학습"
        android:textSize="34sp"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가나와 단어를 마스터하세요"
        android:textSize="18sp"
        android:textColor="@color/light_gray"
        android:layout_marginBottom="48dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_kana_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/dark_surface"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="가나 학습 시작"
            android:gravity="center"
            android:padding="16dp"
            android:textSize="18sp"
            android:textColor="@color/white"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_word_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/dark_surface"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="단어 학습 시작"
            android:gravity="center"
            android:padding="16dp"
            android:textSize="18sp"
            android:textColor="@color/white"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_sentence_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/dark_surface"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="문장 학습 시작"
            android:gravity="center"
            android:padding="16dp"
            android:textSize="18sp"
            android:textColor="@color/white"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_song_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/dark_surface"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="가사 학습 시작"
            android:gravity="center"
            android:padding="16dp"
            android:textSize="18sp"
            android:textColor="@color/white"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_daily_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/dark_surface"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="일일 단어"
            android:gravity="center"
            android:padding="16dp"
            android:textSize="18sp"
            android:textColor="@color/white"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="24dp">

        <Button
            android:id="@+id/btn_settings"
            style="@style/WhiteOutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="설정" />

        <View
            android:layout_width="16dp"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/btn_quit"
            style="@style/WhiteOutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="종료" />

    </LinearLayout>

</LinearLayout>