<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".ui.WritingPracticeFragment">

    <!-- 상단: 이전/다음 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/btn_previous"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="이전"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_next"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="다음"
            android:textColor="@color/white"/>

    </LinearLayout>

    <!-- 중앙: 단어 정보 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <!-- 일본어 단어와 발음 버튼 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/word_to_practice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:textColor="@color/white"
                tools:text="日本語" />

            <ImageButton
                android:id="@+id/btn_speak_writing"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="단어 발음 듣기"
                android:src="@drawable/ic_volume_up"
                android:scaleType="fitCenter"
                android:padding="8dp"
                app:tint="@color/white" />

        </LinearLayout>

        <!-- 히라가나 -->
        <TextView
            android:id="@+id/tv_hiragana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="20sp"
            android:textColor="@color/light_gray"
            tools:text="にほんご" />

        <!-- 한국어 뜻 -->
        <TextView
            android:id="@+id/tv_meaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="24sp"
            android:textColor="@color/mint_accent"
            tools:text="일본어" />

    </LinearLayout>

    <!-- 하단: 숨기기 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/btn_toggle_text"
            style="@style/WhiteOutlinedButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="字"
            android:textSize="20sp"
            android:contentDescription="글자 숨기기/보이기" />

        <Button
            android:id="@+id/btn_toggle_meaning"
            style="@style/WhiteOutlinedButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="뜻"
            android:textSize="20sp"
            android:contentDescription="뜻 숨기기/보이기" />

    </LinearLayout>

    <!-- 필기 영역 (스마트폰에서는 숨김) -->
    <com.example.myapplication.ui.WritingView
        android:id="@+id/writing_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:background="@color/black" />

    <!-- 필기 컨트롤 (스마트폰에서는 숨김) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone">

        <ToggleButton
            android:id="@+id/toggle_eraser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="Eraser"
            android:textOff="Pen"/>

        <Button
            android:id="@+id/clear_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear" />

    </LinearLayout>

</LinearLayout>
