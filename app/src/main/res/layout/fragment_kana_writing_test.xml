<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 문제 번호와 체크박스 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tv_problem_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="문제 1/10"
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <CheckBox
            android:id="@+id/checkbox_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="선택"
            android:textColor="@color/white"
            android:buttonTint="@color/mint_accent"/>
    </LinearLayout>

    <!-- 문제와 정답 카드 (가로로 나란히) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:layout_marginBottom="16dp">

        <!-- 로마자/한글 (문제) - 왼쪽 절반 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/problem_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="@color/dark_surface"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center"
                android:minHeight="140dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="읽기"
                    android:textSize="14sp"
                    android:textColor="@color/light_gray"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tv_romaji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="a"
                        android:textSize="28sp"
                        android:textColor="@color/white"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tv_kana_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ひ"
                        android:textSize="14sp"
                        android:textColor="@color/mint_accent"
                        android:layout_marginStart="6dp"
                        android:layout_marginBottom="8dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_korean"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="아"
                    android:textSize="20sp"
                    android:textColor="@color/light_gray"
                    android:gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 오른쪽 절반 - 빈 공간 또는 정답 표시 -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:minHeight="140dp">

            <!-- 빈 공간 (처음 상태) -->
            <View
                android:id="@+id/empty_space"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"/>

            <!-- 정답 표시 (정답 보기 클릭 시 표시) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/answer_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/dark_surface"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="정답"
                        android:textSize="14sp"
                        android:textColor="@color/light_gray"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_answer_kana"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="あ"
                            android:textSize="36sp"
                            android:textColor="@color/white"
                            android:gravity="center"/>

                        <ImageButton
                            android:id="@+id/btn_speak_answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_volume_up"
                            app:tint="@color/white"
                            android:layout_marginStart="12dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </FrameLayout>
    </LinearLayout>

    <!-- 쓰기 영역 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/dark_surface"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="16dp">

        <com.example.myapplication.ui.WritingView
            android:id="@+id/writing_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"/>
    </androidx.cardview.widget.CardView>

    <!-- 버튼 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_clear"
            style="@style/WhiteOutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="지우기"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_show_answer"
            style="@style/WhiteOutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="정답 보기"/>
    </LinearLayout>

</LinearLayout>
