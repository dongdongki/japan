<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/spacing_small"
    android:layout_marginBottom="@dimen/spacing_medium"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- Japanese (Kanji/Kana) -->
    <TextView
        android:id="@+id/tv_kanji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="日本語の歌詞"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <!-- Hiragana pronunciation -->
    <TextView
        android:id="@+id/tv_hiragana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="にほんごのかし"
        android:textSize="14sp"
        android:textColor="@color/light_gray"
        android:layout_marginBottom="4dp" />

    <!-- Korean meaning -->
    <TextView
        android:id="@+id/tv_meaning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="한국어 뜻"
        android:textSize="14sp"
        android:textColor="@color/mint_accent"
        android:layout_marginBottom="8dp" />

    <!-- Timestamp controls -->
    <LinearLayout
        android:id="@+id/timestamp_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Start timestamp controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="시작"
                android:textSize="11sp"
                android:textColor="@color/light_gray"
                android:gravity="center" />

            <TextView
                android:id="@+id/tv_timestamp_start"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00:00.0"
                android:textSize="12sp"
                android:textColor="@color/light_gray"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground" />

            <Button
                android:id="@+id/btn_start_minus_1"
                style="@style/WhiteOutlinedButton"
                android:layout_width="40dp"
                android:layout_height="28dp"
                android:text="-1"
                android:textSize="10sp"
                android:padding="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />

            <Button
                android:id="@+id/btn_start_minus_01"
                style="@style/WhiteOutlinedButton"
                android:layout_width="46dp"
                android:layout_height="28dp"
                android:layout_marginStart="2dp"
                android:text="-0.1"
                android:textSize="10sp"
                android:padding="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />

            <Button
                android:id="@+id/btn_start_plus_01"
                style="@style/WhiteOutlinedButton"
                android:layout_width="46dp"
                android:layout_height="28dp"
                android:layout_marginStart="2dp"
                android:text="+0.1"
                android:textSize="10sp"
                android:padding="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />

            <Button
                android:id="@+id/btn_start_plus_1"
                style="@style/WhiteOutlinedButton"
                android:layout_width="40dp"
                android:layout_height="28dp"
                android:layout_marginStart="2dp"
                android:text="+1"
                android:textSize="10sp"
                android:padding="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />

        </LinearLayout>

        <!-- End timestamp controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="끝"
                android:textSize="11sp"
                android:textColor="@color/light_gray"
                android:gravity="center" />

            <TextView
                android:id="@+id/tv_timestamp_end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00:05.0"
                android:textSize="12sp"
                android:textColor="@color/light_gray"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground" />

            <Button
                android:id="@+id/btn_end_minus_1"
                style="@style/WhiteOutlinedButton"
                android:layout_width="40dp"
                android:layout_height="28dp"
                android:text="-1"
                android:textSize="10sp"
                android:padding="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />

            <Button
                android:id="@+id/btn_end_minus_01"
                style="@style/WhiteOutlinedButton"
                android:layout_width="46dp"
                android:layout_height="28dp"
                android:layout_marginStart="2dp"
                android:text="-0.1"
                android:textSize="10sp"
                android:padding="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />

            <Button
                android:id="@+id/btn_end_plus_01"
                style="@style/WhiteOutlinedButton"
                android:layout_width="46dp"
                android:layout_height="28dp"
                android:layout_marginStart="2dp"
                android:text="+0.1"
                android:textSize="10sp"
                android:padding="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />

            <Button
                android:id="@+id/btn_end_plus_1"
                style="@style/WhiteOutlinedButton"
                android:layout_width="40dp"
                android:layout_height="28dp"
                android:layout_marginStart="2dp"
                android:text="+1"
                android:textSize="10sp"
                android:padding="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
