<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 헤더 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="선택 가나"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_clear_all"
            style="@style/WhiteOutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체 해제"/>
    </LinearLayout>

    <!-- 선택된 가나 개수 -->
    <TextView
        android:id="@+id/tv_selected_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="선택된 가나: 0개"
        android:textSize="16sp"
        android:textColor="@color/light_gray"
        android:layout_marginBottom="8dp"/>

    <!-- 선택된 가나 목록 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_selected_kana"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="5"
        android:layout_marginBottom="16dp"/>

    <!-- 구분선 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        android:layout_marginBottom="16dp"/>

    <!-- 가나 선택 섹션 제목 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="가나 선택"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <!-- 탭 레이아웃 -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_surface"
        app:tabTextColor="@color/light_gray"
        app:tabSelectedTextColor="@color/mint_accent"
        app:tabIndicatorColor="@color/mint_accent"
        android:layout_marginBottom="8dp"/>

    <!-- 모든 가나 목록 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_all_kana"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="5"
        android:layout_marginBottom="16dp"/>

    <!-- 퀴즈 시작 버튼 -->
    <Button
        android:id="@+id/btn_start_quiz"
        style="@style/WhiteOutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="선택한 가나로 쓰기 퀴즈 시작"
        android:enabled="false"/>

</LinearLayout>
