<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".ui.WordCategoryFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="품사별 단어장"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:layout_marginBottom="32dp"/>

    <!-- 명사 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btn_nouns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/dark_surface"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="명사"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:padding="24dp"/>
    </androidx.cardview.widget.CardView>

    <!-- 형용사 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btn_adjectives"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/dark_surface"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="형용사"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:padding="24dp"/>
    </androidx.cardview.widget.CardView>

    <!-- 동사 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btn_verbs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/dark_surface"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="동사"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:padding="24dp"/>
    </androidx.cardview.widget.CardView>

    <!-- 조사 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btn_particles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/dark_surface"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="조사"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:padding="24dp"/>
    </androidx.cardview.widget.CardView>

    <!-- 부사 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btn_adverbs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/dark_surface"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="부사"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:padding="24dp"/>
    </androidx.cardview.widget.CardView>

    <!-- 접속사 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btn_conjunctions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/dark_surface"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="접속사"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:padding="24dp"/>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_back"
        style="@style/WhiteOutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="24dp"
        android:text="뒤로" />

</LinearLayout>
