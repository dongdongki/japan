<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp"
    tools:context=".ui.DailyWordPracticeFragment">

    <!-- Left side: Word information -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:paddingEnd="16dp">

        <!-- Top: Word count and Toggle buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Word count on left -->
            <TextView
                android:id="@+id/tv_word_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/white"/>

            <!-- Toggle buttons on right -->
            <Button
                android:id="@+id/btn_toggle_text"
                style="@style/WhiteOutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="字"
                android:textSize="14sp"
                android:paddingHorizontal="16dp"/>

            <View
                android:layout_width="8dp"
                android:layout_height="0dp"/>

            <Button
                android:id="@+id/btn_toggle_reading"
                style="@style/WhiteOutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="音"
                android:textSize="14sp"
                android:paddingHorizontal="16dp"/>

            <View
                android:layout_width="8dp"
                android:layout_height="0dp"/>

            <Button
                android:id="@+id/btn_toggle_meaning"
                style="@style/WhiteOutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="뜻"
                android:textSize="14sp"
                android:paddingHorizontal="16dp"/>

        </LinearLayout>

        <!-- Content area with fixed positions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Word with TTS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="48sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

                <ImageButton
                    android:id="@+id/btn_speak"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/ic_volume_up"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="발음 듣기"
                    app:tint="@color/white"
                    android:layout_marginStart="8dp"/>

            </LinearLayout>

            <!-- Reading -->
            <TextView
                android:id="@+id/tv_reading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="@color/light_gray"
                android:layout_marginTop="8dp"
                android:gravity="center"/>

            <!-- Meaning -->
            <TextView
                android:id="@+id/tv_meaning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:textColor="@color/white"
                android:layout_marginTop="24dp"
                android:gravity="center"/>

            <!-- Example JP (word) -->
            <TextView
                android:id="@+id/tv_example_jp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/light_gray"
                android:layout_marginTop="24dp"
                android:gravity="center"/>

            <!-- Example KR (meaning) -->
            <TextView
                android:id="@+id/tv_example_kr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/light_gray"
                android:layout_marginTop="8dp"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/light_gray"/>

    <!-- Right side: Writing area -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <!-- Top controls: Navigation and clear -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Weak word checkbox next to previous button -->
            <CheckBox
                android:id="@+id/cb_weak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/weak_word_red"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btn_previous"
                style="@style/WhiteOutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="이전"
                android:textSize="12sp"
                android:paddingHorizontal="12dp"/>

            <View
                android:layout_width="8dp"
                android:layout_height="0dp"/>

            <Button
                android:id="@+id/btn_next"
                style="@style/WhiteOutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="다음"
                android:textSize="12sp"
                android:paddingHorizontal="12dp"/>

            <View
                android:layout_width="16dp"
                android:layout_height="0dp"/>

            <Button
                android:id="@+id/btn_clear"
                style="@style/WhiteOutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="지우기"
                android:textSize="12sp"
                android:paddingHorizontal="12dp"/>

        </LinearLayout>

        <!-- Top border for writing area -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_marginTop="8dp"/>

        <!-- Writing canvas -->
        <com.example.myapplication.ui.WritingView
            android:id="@+id/writing_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</LinearLayout>
