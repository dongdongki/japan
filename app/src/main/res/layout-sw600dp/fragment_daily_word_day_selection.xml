<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.DailyWordDaySelectionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="일일 단어"
            android:textSize="24sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_random_quiz"
            style="@style/WhiteOutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="랜덤 퀴즈"
            android:textSize="14sp"
            android:paddingHorizontal="16dp"/>

        <View
            android:layout_width="8dp"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/btn_word_quiz"
            style="@style/WhiteOutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="단어 퀴즈"
            android:textSize="14sp"
            android:paddingHorizontal="16dp"/>

        <View
            android:layout_width="8dp"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/btn_weak_word_quiz"
            style="@style/WhiteOutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="취약 퀴즈"
            android:textSize="14sp"
            android:paddingHorizontal="16dp"/>

        <View
            android:layout_width="8dp"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/btn_weak_word_list"
            style="@style/WhiteOutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="취약 목록"
            android:textSize="14sp"
            android:paddingHorizontal="16dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_total_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/light_gray"
        android:layout_marginBottom="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
