<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MyApplication" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Apply the custom dialog theme -->
        <item name="materialAlertDialogTheme">@style/App.MaterialAlertDialog</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_surface</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mint_accent</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/near_black</item>

        <!-- Background and surface colors -->
        <item name="android:windowBackground">@color/near_black</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/light_gray</item>

        <!-- Text color -->
        <item name="android:textColor">@color/light_gray</item>
        <item name="textAppearanceTitleMedium">@style/MyTitleMedium</item>
    </style>

    <style name="MyTitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WhiteOutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/white</item>
    </style>

    <!-- Custom theme for Material Dialogs -->
    <style name="App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorSurface">@color/dark_surface</item>
        <item name="materialAlertDialogTitleTextStyle">@style/App.AlertDialog.TitleText</item>
        <item name="buttonBarPositiveButtonStyle">@style/App.AlertDialog.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/App.AlertDialog.Button</item>
    </style>

    <style name="App.AlertDialog.TitleText" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="App.AlertDialog.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>